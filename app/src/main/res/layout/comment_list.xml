<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/comment_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/category_1"/>

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="익명"
        app:layout_constraintLeft_toRightOf="@id/comment_icon"
        app:layout_constraintTop_toTopOf="@id/comment_icon"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/comment_icon"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        app:layout_constraintTop_toBottomOf="@id/comment_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/comment_icon"
        android:textSize="18sp"
/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/comment_text"/>



</androidx.constraintlayout.widget.ConstraintLayout>